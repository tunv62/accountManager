<body>
  <%- include('layouts/navbar')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>hello</h1>
            <span class="subheading">admin page</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- container -->
  <div class="container">
    <table id="user_table">
      <tr>
        <th>id</th>
        <th>email</th>
        <th>First Name</th>
        <th>Last Name</th>
      </tr>
      <% for (let user of data){ %>
      <tr>
        <td> <%= user._id %></td>
        <td class="email_user"><%= user.local.email %> </td>
        <td class="firstname_user"><%= user.info.firstname %> </td>
        <td class="lastname_user"><%= user.info.lastname %> </td>
        <td>
          <button class="btn update" id="<%= user._id %>">update</button>
          <button class="btn delete" id="<%= user._id %>">delete</button>
        </td>
      </tr>
      <% } %>
    </table>
  </div>

