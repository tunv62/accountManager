<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('layouts/head')-%>
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
  <%- include('layouts/navbar')-%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>hello</h1>
            <span class="subheading">admin page</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <div class="container">
    <nav class="navbar navbar-light bg-light justify-content-between">
      <a class="navbar-brand">Navbar</a>
      <div class="form-inline">
        <input class="form-control mr-sm-2" id="key_search" type="text" placeholder="firstname, lastname or email">
        <button class="btn btn-outline-success my-2 my-sm-0" id="btn_search">Search</button>
      </div>
        
    </nav>
    <!-- container -->
    <div class="container" id="data_table">

    </div>

    <div class="col-md-12 see-more">
         <hr class="hr-or">
         <span class="span-or" id="see_more">see more.....</span>
   </div>

    <nav aria-label="...">
      <ul class="pagination justify-content-end">
        <li class="page-item">
          <input class="page-link" id="btn_previous" name="page" type="button" value="Previous" >
        </li>
        <li class="page-item">
          <input id="btn_left" class="page-link btn_page" name="page" type="button" value="0" >
        </li>
        <li class="page-item active">
          <input id="btn_mid" class="page-link btn_page" name="page" type="button" value="1">
        </li>
        <li class="page-item">
          <!-- <a class="page-link" href="#">3</a> -->
          <!-- <button class="page-link" name="check" id="btn_test" value="demo">3</button> -->
          <input id="btn_right" class="page-link btn_page" name="page" type="button" value="2">
        </li>
        <li class="page-item">
          <input class="page-link" id="btn_next" name="page" type="button" value="Next" >
        </li>
      </ul>
    </nav>
  </div>


  <!-- The Modal -->
  <div class="modal fade" id="deleteModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">delete user</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          Are you sure you want to remove this data?
        </div>

        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" id="btn_delete" class="btn btn-danger">OK</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>

      </div>
    </div>
  </div>

  <div class="modal fade" id="updateModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">update user</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <div class="form-group">
            <input type="text" id="firstname" name="firstname" class="form-control input_user" placeholder="first name">
          </div>
          <div class="form-group">
            <input type="text" id="lastname" name="lastname" class="form-control my-input" placeholder="last name">
          </div>
        </div>

        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" id="btn_update" class="btn btn-danger">OK</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>

      </div>
    </div>
  </div>



  <!-- footer -->
  <%- include('layouts/footer')-%>

  <!-- scripts -->
  <%- include('layouts/scripts')-%>
  <script src='/js/admin.js'></script>
</body>

</html>